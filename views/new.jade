h1 New Song
form#upload(action="/upload", method="post", enctype="multipart/form-data")
  p
    label(for="song_file") Upload a new song
    br
    input#song_file(type="file", name="song[file]")
  p Status 
    span#status 0
    %.
form(action="/songs", method="post")
  p
    input#song_path(type="hidden", name="song[path]")
  p
    label(for="song_description") Description
    br
    textarea#song_description(name="song[description]", cols="60", rows="8")
  p
    input(type="submit", value="Save")